{{> header title=title page=null videoLink=videoLink hasTimestamps=hasTimestamps}}

<form method="post" class="container">
    <p><a href="/">‚Üê Back to Match List</a></p>
    <h2>Video Configuration</h2>

    <label for="video">Video Link</label>
    <input name="video" id="video" class="form-control" value="{{videoLink}}" required />

    <h3 class="mt-3">Offsets</h3>
    <p class="fst-italic">Please enter the times as they are shown on the video linked above. This is used to offset the timestamps relative to the video - e.g. if there's 3 minutes of video before kick off, a shot in the 1<sup>st</sup> minute needs to be offset to the 4<sup>th</sup> minute of video.</p>
    {{#each segments}}
    <input type="hidden" name="segment[]" value="{{id}}" />
    <p class="mb-5">The {{name}} starts at <input type="number" name="minute[]" max="200" value="{{minutes}}" required/> minutes and <input type="number" max="59" name="second[]" value="{{seconds}}" required/> seconds.</p>
    {{/each}}

    <button class="btn btn-primary">Save</button>
</div>