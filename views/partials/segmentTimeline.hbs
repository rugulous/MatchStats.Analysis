<h3 class="timeline-header">{{segment.name}}</h3>

<div class="row">
{{#eachStat segment}}
    <div class="col-2 d-none d-lg-flex"></div>
    <div class="col-5 col-lg-3">
        {{#if isHome}}
        <p><b>{{getTime time ../segment.startTime ../segment.minuteOffset}}</b> - {{statType}} <i>({{outcome}})</i></p>
        {{/if}}
    </div>
    <div class="col-2 timeline"></div>
    <div class="col-5 col-lg-3 text-end">
        {{#unless isHome}}
        <p><i>({{outcome}})</i> {{statType}} - <b>{{getTime time ../segment.startTime ../segment.minuteOffset}}</b></p>
        {{/unless}}
    </div>
    <div class="col-2 d-none d-lg-flex"></div>
{{/eachStat}}
</div>