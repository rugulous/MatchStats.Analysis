<style>
    tr{
        min-height: 41px;
    }

    .stuck{
        position: absolute;
        width: 10rem;
        left: 0;
    }

    .table-responsive{
        margin-left: calc(10rem + 10px);
    }

    .section-row:not(:first-of-type) td{
        padding-top: 3rem;
    }

    td:not(.stuck), th:not(.stuck){
        text-align: center;
        padding: .5rem;
    }

    .attend-NA{
        font-style: italic;
        background-color: #EEE !important;
        color: #222 !important;
    }
</style>

{{> header}}

<h2 class="ms-3">Attendance</h2>

<p class="text-center"><a href="/squad">‚Üê Back to Squad List</a> | Key: {{#each statuses}} <span class="attend-{{ID}} badge">{{ID}} - {{Name}}</span>{{/each}} <span class="attend-NA badge">? - Not Recorded</span></p>

<button class="btn btn-primary btn-lg ms-3 mb-3" data-bs-toggle="modal" data-bs-target="#add-event">+ Add Event</button>

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th class="stuck border-0"></th>
                {{#each events}}
                <th><a href="/event/{{ID}}">{{Name}} <i>({{dateOnly Date}})</i></a></th>
                {{/each}}
            </tr>
        </thead>
        <tbody>
            {{#each squad}}
                {{#if players.length}}
                    <tr class="section-row">
                        <td class="stuck"><b>{{name}}</b></td>
                        <td class="border-0" colspan="{{../events.length}}">&nbsp;</td>
                    </tr>
                    {{#each players}}
                        <tr>
                            <td class="stuck">{{firstName}} {{lastName}}</td>
                            {{#each attendance}}
                                <td class="attend-{{ifNull this "NA"}}">{{ifNull this "?"}}</td>
                            {{/each}}
                        </tr>
                    {{/each}}
                {{/if}}
            {{/each}}
        </tbody>
    </table>
</div>

<form action="/add-event" method="post">
    <div class="modal" tabindex="-1" id="add-event">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add Event</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="name">Name</label>
                        <input id="name" name="name" class="form-control" required />
                    </div>

                    <div>
                        <label for="date">Date</label>
                        <input id="date" name="date" type="date" class="form-control" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button class="btn btn-primary">+ Add Event</button>
                </div>
            </div>
        </div>
    </div>
</form>

