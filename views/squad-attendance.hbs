<style>
    tr {
        min-height: 41px;
    }

    .stuck {
        position: absolute;
        width: 10rem;
        left: 0;
    }

    .table-responsive {
        margin-left: calc(10rem + 10px);
    }

    .section-row:not(:first-of-type) td {
        padding-top: 3rem;
    }

    td:not(.stuck),
    th:not(.stuck) {
        text-align: center;
        padding: .5rem;
    }

    .attend-NA {
        font-style: italic;
        background-color: #EEE !important;
        color: #222 !important;
    }
</style>

{{> header}}

<div class="container">

    <p><a href="/squad">‚Üê Back to Squad List</a></p>
    <h2>Attendance</h2>
    <button class="btn btn-primary btn-lg mb-3" data-bs-toggle="modal" data-bs-target="#add-event">+ Add Event</button>

    {{#each squad}}
    {{#if players.length}}
    <h2>{{name}}</h2>
    <div class="row row-cols-1 row-cols-md-2">
        {{#each players}}
        <div>
            <div class="card mb-3">
                <div class="card-body">
                    <p class="fw-bold">{{firstName}} {{lastName}}</p>

                    {{#each ../../statuses}}
                    <div class="mb-3">
                        <label>{{Name}} ({{ifNull (lookup ../attendance.totals ID) 0}})</label>
                        <div class="progress" role="progressbar" aria-label="{{Name}}" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
                            <div class="progress-bar attend-{{ID}}" style="width: {{calculateStatPercent (ifNull (lookup ../attendance.totals ID) 0) ../attendance.totals.all}}%"></div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}
    {{/each}}
</div>

<form action="/add-event" method="post">
    <div class="modal" tabindex="-1" id="add-event">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add Event</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="name">Name</label>
                        <input id="name" name="name" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label for="type">Type</label>
                        <select id="type" name="type" class="form-control" required>
                            <option value="">-- Please Select --</option>
                            {{#each eventTypes}}
                            <option value="{{ID}}">{{Name}}</option>
                            {{/each}}
                        </select>
                    </div>

                    <div>
                        <label for="date">Date</label>
                        <input id="date" name="date" type="date" class="form-control" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button class="btn btn-primary">+ Add Event</button>
                </div>
            </div>
        </div>
    </div>
</form>

